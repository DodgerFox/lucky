.options

  &-body
    display flex
    justify-content space-between
    align-items center
    margin-top 110px
    +to-width(640px)
      margin-top 40px


  &-image
    +to-width(1024px)
      img
        max-width 480px
    +to-width(900px)
      display none

  &-list

    &__item
      display flex
      align-items center
      margin-bottom 15px

      img
        margin-right 25px
        +to-width(640px)
          max-width 38px
          margin-right 15px

      p
        font-size 22px
        line-height 28px
        font-weight 600
        +to-width(1100px)
          font-size 18px
        +to-width(900px)
          font-size 16px
        +to-width(560px)
          font-size 14px

  .main-button
    margin 0 auto
    margin-top 90px
    +to-width(640px)
      margin-top 40px
