.quality
  background-color #f5f5f5

  &-body
    display flex
    align-items center
    justify-content space-between
    margin-top 30px
    +to-width(800px)
      flex-direction column

    p
      max-width 520px
      font-size 20px
      font-weight 700
      line-height 40px
      text-align center
      margin 0 20px
      +to-width(1024px)
        font-size 16px
        line-height 30px
      +to-width(800px)
        margin 40px 0
