.delivery
  border-top 10px solid #f5f5f5

  &-nav
    margin-top 70px
    display flex
    justify-content center
    margin-bottom 70px

    &__item
      font-size 18px
      font-weight 700
      margin-right 60px
      position relative
      cursor pointer
      t()
      &:last-child
        margin-right 0

      &:hover
        color #fa8116

      &.active
        color #fa8116
        padding-bottom 10px
        &:after
          content ''
          position absolute
          left 0
          right 0
          bottom 0
          height 2px
          background-color #fa8116

  &-container
    max-width 830px
    margin 0 auto

  &-item
    display flex
    padding-bottom 60px

    &__icon
      max-width 110px
      width 100%
      margin-right 40px

    &__title
      font-size 22px
      font-weight 700
      line-height 30px
      padding-bottom 10px

    &__text
      font-size 16px
      font-weight 700
      line-height 31px
