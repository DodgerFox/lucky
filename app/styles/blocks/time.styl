.time
  background-image linear-gradient(-93deg, rgba(113, 228, 215, 0.5) 0%, rgba(254, 128, 90, 0.5) 100%)
  padding 50px 0

  &-container
    border-radius 30px
    background-color #ffffff
    height 610px
    display flex
    align-items center
    justify-content center
    +to-width(1024px)
      height auto
      padding 40px
    +to-width(767px)
      flex-direction column
      align-items flex-start
    +to-width(420px)
      padding 40px 20px

  &__image
    margin-right 40px
    margin-left 20px
    margin-top 50px
    +to-width(1100px)
      margin-right 10px
    +to-width(1024px)
      img
        max-width 300px
    +to-width(767px)
      margin 0
    +to-width(420px)
      img
        max-width 100%

  &__title
    font-size 38px
    font-weight 700
    line-height 65px
    margin-bottom 25px
    span
      color #ff8a6f
    +to-width(1200px)
      font-size 32px
      line-height 50px
    +to-width(1024px)
      font-size 26px
      line-height 42px
    +to-width(420px)
      font-size 22px
      line-height 36px
