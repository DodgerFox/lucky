.form
  background-color #f5f5f5
  padding-bottom 150px
  +to-width(640px)
    padding-bottom 60px

  &__text
    font-size 28px
    font-weight 600
    margin-top 20px
    text-align center
    +to-width(767px)
      font-size 22px
    +to-width(520px)
      font-size 18px

  &-body
    margin 0 auto
    margin-top 80px
    background-color #ffffff
    border-radius 25px
    box-shadow 2px 3px 59px 1px rgba(201, 201, 201, 0.38)
    padding 60px
    padding-bottom 125px
    max-width 500px
    +to-width(520px)
      padding 50px 30px
      padding-bottom 120px
      margin-top 40px
    +to-width(420px)
      padding 50px 20px
      padding-bottom 120px

  &__title
    font-size 22px
    line-height 32px
    font-weight 700
    padding-bottom 40px
    +to-width(420px)
      font-size 18px


  &__input
    height 63px
    width 100%
    background-color #fff6da
    border-radius 32px
    border 0
    margin-bottom 15px
    padding 0 30px
    color #343434
    font-size 18px
    font-weight 500
    +to-width(420px)
      height 55px
      font-size 16px

  &__button
    position relative
    float right
    margin-top 45px
    background none
    font-size 20px
    font-weight 700
    border none
    padding-bottom 8px
    border-bottom 5px solid #a7ffc8
    t()
    +to-width(420px)
      font-size 16px
    &:after
      content ''
      position absolute
      left 0
      bottom 0
      right 0
      height 5px
      background-color #a7ffc8
      t()
    &:hover
      &:after
        height 30px
        top 0
