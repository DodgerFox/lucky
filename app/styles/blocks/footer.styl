.footer
  padding-top 80px
  background-color #333

  &-logo
    margin 0 auto
    display table

  &__text
    font-size 18px
    font-weight 500
    padding-bottom 20px
    color white

  &__link
    font-size 22px
    font-weight 600
    color white
    t()
    &:hover
      color #fa8116

  &-body
    margin-top 75px
    display flex
    flex-wrap wrap

  &-item
    width 33.333%
    margin-bottom 60px
    border-right 1px solid #696969
    display flex
    flex-direction column

    &:nth-child(3)
      border none
      align-items flex-end

    &:nth-child(2)
      align-items center

    &:last-child
      width 66.666%
      align-items flex-end
      border none
