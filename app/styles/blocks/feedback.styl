.feedback
  &-slider
    display flex
    margin-top 60px

  &-slide
    margin 0 18px
    margin-top 25px

  &-container
    background-color #ffffff
    box-shadow 0px 8px 40px rgba(57, 65, 74, 0.1)
    padding 45px 40px
    border-radius 25px
    height 100%

  &__avatar
    width 200px
    height 200px
    border-radius 50%
    margin 0 auto

  &__name
    color #fe805a
    font-size 24px
    font-weight 700
    margin-top 25px
    text-align center
    padding-bottom 10px

  &__city
    color #9c9393
    font-size 16px
    font-weight 600
    text-align center
    padding-bottom 24px

  &__text
    font-weight 600
    line-height 22px
    text-align center
