.best
  background-color #f5f5f5

  &-one
    display flex
    align-items center
    justify-content center
    margin-top 110px
    padding-bottom 100px
    border-bottom 2px solid #e1e1e1
    +to-width(767px)
      flex-direction column
      margin-top 80px
    +to-width(560px)
      padding-bottom 40px

    &__image
      margin-right 90px
      +to-width(1023px)
        margin-right 40px
        max-width 240px
      +to-width(767px)
        margin-right 0
        margin-bottom 30px

    &__text
      max-width 580px
      font-size 20px
      font-weight 400
      line-height 40px
      span
        font-weight 700
      +to-width(1100px)
        font-size 18px
      +to-width(1023px)
        font-size 16px
        line-height 34px
      +to-width(767px)
        text-align center
      +to-width(560px)
        font-size 14px
        line-height 28px

  &-numbers
    display flex
    justify-content space-between
    padding-top 77px
    +to-width(900px)
      flex-wrap wrap


  &-block
    padding 80px 0
    display flex
    align-items center
    justify-content center
    border-bottom 2px solid #e1e1e1
    +to-width(900px)
      flex-direction column-reverse
    &:nth-child(2)
      +to-width(900px)
        flex-direction column
    &__image
      margin 0 30px
      +to-width(900px)
        margin-bottom 40px
      +to-width(767px)
        margin-left 0
        margin-right 0
        img
          max-width 100%
    &-left
      max-width 640px
      margin 0 30px
      +to-width(767px)
        margin-left 0
        margin-right 0
    .options-list__item
      align-items flex-start
      margin-bottom 40px
      p
        line-height 34px

    .second-button
      margin-left 74px
      +to-width(767px)
        margin-left auto

  &-item
    width 25%
    padding 0 20px
    +to-width(900px)
      width 50%
      margin-bottom 40px
    +to-width(560px)
      width 100%
    &__image
      margin 0 auto
      margin-bottom 40px
      display block
      height 132px
      width 132px
      border-radius 50%
      display flex
      align-items center
      justify-content center
      background-color rgba(134, 83, 205, 0.2)

    &:nth-child(2)
      .best-item__image
        background-color rgba(113, 228, 215, 0.2)
    &:nth-child(3)
      .best-item__image
        background-color rgba(254, 221, 117, 0.2)
    &:last-child
      .best-item__image
        background-color rgba(254, 128, 90, 0.2)

    &__title
      font-size 20px
      font-weight 700
      padding-bottom 20px
      text-align center
      +to-width(1023px)
        font-size 16px
        padding-bottom 10px

    &__text
      font-size 14px
      font-weight 500
      line-height 32px
      text-align center
      +to-width(1023px)
        line-height 28px

  .main-button
    margin 0 auto
    margin-top 90px
    +to-width(767px)
      margin-top 20px
