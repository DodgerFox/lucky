.photos
  background-color #f5f5f5

  &-slider
    width auto
    margin-left -30px
    margin-right -30px
    margin-top 80px
    +to-width(1300px)
      padding 0 30px
    +to-width(640px)
      margin-top 40px
      margin-right -20px
      margin-left -20px

    .slick-list
      padding 30px
      +to-width(420px)
        padding 20px 10px

    .slick-dots
      display flex!important
      justify-content center
      margin-top 15px
      li
        width 16px
        height 16px
        border-radius 50%
        background-color #dfdfdf
        overflow hidden
        margin-right 10px
        t()
        button
          opacity 0
          width 100%
        &:last-child
          margin-right 0

        &.slick-active
          background-color #fa8116

    .slick-arrow
      background-color transparent
      border none
      color transparent
      background-image url('../images/arrow.svg')
      width 22px
      height 34px
      top 140px
      position absolute

      &.slick-prev
        transform rotate(180deg)
        left -10px
        +to-width(1300px)
          left 20px
        +to-width(640px)
          left 5px

      &.slick-next
        right -10px
        +to-width(1300px)
          right 20px
        +to-width(640px)
          right 5px


      &.slick-disabled
        opacity 0.3


  &-slide
    padding 0 10px
    opacity 0
    t()
    &.slick-active
      opacity 1

  &-container
    height 260px
    border-radius 20px
    box-shadow 2px 3px 59px 1px rgba(201, 201, 201, 0.38)
    background-color #ffffff
    background-repeat no-repeat
    background-position center
    background-size cover
