.welcome
  width 100%
  height 100vh
  padding-top 150px
  background-image url('../images/welcome-bg.jpg')
  background-position center
  background-size cover

  .wrap
    display flex
    align-items center
    justify-content space-between
    height 100%

  &__title
    color #242424
    font-size 42px
    font-weight 900
    line-height 68px
    text-transform uppercase
    letter-spacing 1px
    padding-bottom 15px
    +to-width(1200px)
      font-size 38px
      line-height 62px
    +to-width(540px)
      font-size 28px
      line-height 50px
    +to-width(420px)
      font-size 20px
      line-height 38px
    span
      position relative
      color #fa8116
      margin-left 8px
      &.crossed
        color #141414
        &:after
          content ''
          position absolute
          left 0
          right 0
          top 23px
          height 7px
          background-color #fa8116
          +to-width(540px)
            top 15px
            height 6px
          +to-width(420px)
            height 3px
            top 10px

  &__text
    padding-bottom 37px
    letter-spacing 0.48px
    font-size 24px
    font-weight 500
    line-height 40px
    +to-width(1200px)
      font-size 22px
    +to-width(540px)
      font-size 18px
      line-height 24px
    +to-width(420px)
      font-size 16px
      


  &-right
    position relative
    padding-right 120px
    +to-width(1200px)
      padding-right 60px
    +to-width(1023px)
      padding-right 0

  &__lucky
    +to-width(900px)
      display none

  &__knife
    position absolute
    top -40px
    right -20px
    +to-width(1200px)
      max-width 200px
    +to-width(1023px)
      display none
